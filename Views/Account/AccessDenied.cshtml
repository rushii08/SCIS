@{
    ViewData["Title"] = "Access Denied";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg mt-5">
                <div class="card-header bg-danger text-white">
                    <h2 class="text-center mb-0">Access Denied</h2>
                </div>
                <div class="card-body p-4 text-center">
                    <i class="fas fa-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
                    <h4 class="mt-3">You do not have permission to access this resource.</h4>
                    <p class="lead">Please contact your administrator if you believe this is an error.</p>
                    
                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Return to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
