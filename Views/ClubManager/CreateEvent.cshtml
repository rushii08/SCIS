@model SCIS.Models.Event

@{
    ViewData["Title"] = "Create Event";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Create Event</h1>
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="CreateEvent" method="post">
                <input type="hidden" asp-for="ClubId" />

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Event Name</label>
                    <input asp-for="Name" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EventDate" class="form-label">Date</label>
                    <input asp-for="EventDate" type="date" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Location" class="form-label">Location</label>
                    <input asp-for="Location" class="form-control" />
                </div>

                <button type="submit" class="btn btn-success">Create</button>
            </form>
        </div>
    </div>
</div>
